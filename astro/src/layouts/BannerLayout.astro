---
import Head from "@components/Head.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.TITLE}`} description={description} />
  </head>
  <body>
    <div id="banner" class="animate" style={{height: ""}}>
        <slot />
    </div>
  </body>
</html>
