{
    "imports": {
        "@astrojs/check": "https://esm.sh/@astrojs/check@0.9.4",
        "@astrojs/db": "https://esm.sh/@astrojs/db@^0.14.13",
        "@astrojs/markdown-remark": "https://esm.sh/@astrojs/markdown-remark@^6.3.1",
        "@astrojs/mdx": "https://esm.sh/@astrojs/mdx@^4.2.6",
        "@astrojs/netlify": "https://esm.sh/@astrojs/netlify@^6.3.2",
        "@astrojs/rss": "https://esm.sh/@astrojs/rss@^4.0.11",
        "@astrojs/sitemap": "https://esm.sh/@astrojs/sitemap@^3.3.1",
        "@deno/vite-plugin": "https://esm.sh/@deno/vite-plugin@^1.0.4",
        "@netlify/functions": "https://esm.sh/@netlify/functions@^3.1.5",
        "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.5",
        "astro": "npm:astro@^5.7.12",
        "astro-pagefind": "https://esm.sh/astro-pagefind@^1.8.3",
        "clsx": "https://esm.sh/clsx@^2.1.1",
        "studiocms": "https://esm.sh/studiocms@^0.1.0-beta.17",
        "tailwind-merge": "https://esm.sh/tailwind-merge@^3.2.0",
        "tailwindcss": "https://esm.sh/tailwindcss@^4.1.5",
        "typescript": "https://esm.sh/typescript@^5.8.3",
        "vite": "https://esm.sh/vite@^6.3.5",
        "@tailwindcss/typography": "https://esm.sh/@tailwindcss/typography@^0.5.16",
        "pagefind": "https://esm.sh/pagefind@^1.3.0",
        "prettier": "https://esm.sh/prettier@^3.5.3",
        "prettier-plugin-astro": "https://esm.sh/prettier-plugin-astro@^0.13.0",
        "prettier-plugin-organize-imports": "https://esm.sh/prettier-plugin-organize-imports@^3.2.4",
        "prettier-plugin-tailwindcss": "https://esm.sh/prettier-plugin-tailwindcss@^0.5.14"
    },
    "nodeModulesDir": "auto",
    "tasks": {
        "dev": "deno task db:push && deno task dev:soft",
        "dev:soft": "deno task astro dev --remote",
        "start": "deno task astro dev --remote",
        "check-build": "deno task astro check && deno task build",
        "build": "deno task astro build --remote",
        "db:push": "deno task astro db push --remote",
        "astro": "deno run -A astro"
    }
}