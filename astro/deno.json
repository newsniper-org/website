{
    "imports": {
        "@astrojs/check": "npm:@astrojs/check@0.9.4",
        "@astrojs/db": "npm:@astrojs/db@^0.14.13",
        "@astrojs/markdown-remark": "npm:@astrojs/markdown-remark@^6.3.1",
        "@astrojs/mdx": "npm:@astrojs/mdx@^4.2.6",
        "@astrojs/netlify": "npm:@astrojs/netlify@^6.3.2",
        "@astrojs/rss": "npm:@astrojs/rss@^4.0.11",
        "@astrojs/sitemap": "npm:@astrojs/sitemap@^3.3.1",
        "@deno/vite-plugin": "https://esm.sh/@deno/vite-plugin@^1.0.4",
        "@netlify/functions": "https://esm.sh/@netlify/functions@^3.1.5",
        "@tailwindcss/typography": "npm:@tailwindcss/typography@^0.5.16",
        "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.5",
        "astro": "npm:astro@^5.7.12",
        "astro-pagefind": "https://esm.sh/astro-pagefind@^1.8.3",
        "clsx": "https://esm.sh/clsx@^2.1.1",
        "pagefind": "npm:pagefind@^1.3.0",
        "prettier": "npm:prettier@^3.5.3",
        "prettier-plugin-astro": "npm:prettier-plugin-astro@^0.14.1",
        "prettier-plugin-organize-imports": "npm:prettier-plugin-organize-imports@^4.1.0",
        "prettier-plugin-tailwindcss": "npm:prettier-plugin-tailwindcss@^0.6.11",
        "studiocms": "https://esm.sh/studiocms@^0.1.0-beta.17",
        "tailwind-merge": "https://esm.sh/tailwind-merge@^3.2.0",
        "tailwindcss": "https://esm.sh/tailwindcss@^4.1.5",
        "typescript": "https://esm.sh/typescript@^5.8.3",
        "vite": "https://esm.sh/vite@^6.3.5"
    },
    "nodeModulesDir": "auto",
    "tasks": {
        "dev": {
            "dependencies": ["db:push", "dev:soft"]
        },
        "dev:soft": "deno task astro dev --remote",
        "start": "deno task astro dev --remote",
        "check": "deno task astro check",
        "check-build": {
            "dependencies": ["check", "build"]
        },
        "build": "deno task astro build --remote",
        "db:push": "deno task astro db push --remote",
        "astro": "npx astro"
    }
}